<body>
  <header class='header'>
    <div >
      {{>logo}}
    </div>
    <nav class='header_nav '>
      <div class="header_nav-right">
      {{>nav list=header}}
      </div>
    </nav>
  </header>
  {{#with main}}
  <div class="hero">
    <img class='hero_image' src="{{image}}" alt="hero image">
    <div class="hero_content">
      <h1 class="hero_title">
        {{heading}}
      </h1>
      <p class="hero_text">{{descriotion}}</p>
      <a
      href='{{href}}'
      class='button hero_button'
    >{{button}}</a>
    </div>
  </div>
  {{/with}}
  <main class="featured">
    {{#each featured}}
    <div class="featured_card">
        <div class="featured-image" style="background-image: url({{photo}})">
        </div>
        <h2 class="featured_title">{{heading}}</h2>
        <p class="featured_info">{{info}}</p>
        <div class="featured_button">
          <a href="{{linkUrl}}" class="featured_button_link">{{linkText}}</a>
        </div>
      </div>
    {{/each}}
  </main>
  <div class="form">
    {{#each actions}}
    <div class="form_content">
      <h3 class="form_title">{{heading}}</h3>
      <div class="form_action">
        <a href="{{url}}" class=" button form_button">{{text}}</a>
      </div>
    </div>
    {{/each}}
  </div>


  <footer class="footer">
    <div>
      {{>logo}}
      <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
      <span class="footer_title">{{title}}</span>
      {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
  </footer>
</body>