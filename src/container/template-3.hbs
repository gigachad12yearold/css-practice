<body>
  <header class='header'>
    <a href="#test">
      {{>logo}}
    </a>
    <nav class='header_nav '>
      <div class="header_nav-right">
      {{>nav list=header}}
      </div>
    </nav>
  </header>
  <input type="text" class="input">
  <div class="modal">
    {{hero.text}}
    <img class='modal_image' src="{{hero.photo}}" alt="hero image">
    <div class="modal_text">{{hero.text}}{{hero.text}}</div>
    
  </div>
  {{#with hero}}
  <div class="hero">
    <div class="hero_content">
      <h1 class="hero_title">
        {{title}}
      </h1>
      <p class="hero_text">{{text}}</p>
    </div>
    <div class="hero_slider">
      <div class="hero_slider-icon hero_slider-left">{{left}}</div>
    <img class='hero_image' src="{{photo}}" alt="hero image">
    <div class="hero_slider-icon hero_slider-right">{{right}}</div>
    </div>
  </div>
  {{/with}}
  <main class="blog">
    {{#each blog}}
    {{>cardBlog data=this}}
    {{/each}}
  </main>
  <div id='test' class="form ">
    {{#with form}}
    <div class="form_content">
      <h3 class="form_title">{{title}}</h3>
      <p class="form_info">{{info}}</p>
    </div>
    <div class="form_action">
      <a href="{{href}}" class="button form_button">{{button}}</a>
    </div>
    {{/with}}
  </div>


  <footer class="footer">
    <div>
      {{>logo}}
      <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
      <span class="footer_title">{{title}}</span>
      {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
  </footer>
</body>